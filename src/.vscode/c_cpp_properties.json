{
    "env": {
        "myDefaultIncludePath": [
            "${workspaceFolder}",
            "${workspaceFolder}/include"
        ],
        "myCompilerPath": "/usr/local/bin/g++"
    },
    "configurations": [
        {
            "name": "C Linux GTK3",
            "includePath": [
                "${workspaceFolder}/**",
                "/usr/include",
                "/usr/include/linux",
                "/usr/include/glib-2.0",
                "/usr/include/gtkmm-3.0",
                "/usr/include/gtk-3.0",
                "/usr/include/glib-2.0",
                "/usr/local/include"
            ],
            "defines": [],
            "compilerPath": "/usr/bin/g++",
            "cStandard": "c11",
            "cppStandard": "c++17",
            "intelliSenseMode": "gcc-x64",
            "compilerArgs": [
                "-Wall",
                "-Wextra",
                "-mtune=native",
                "-no-pie",
                "-lm",
                "-xc++",
                "-lstdc++",
                "-shared-libgcc",
                "`pkg-config",
                "--libs",
                "--cflags",
                "gtkmm-3.0`"
            ]
        }
    ],
    "version": 4
}